<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/PRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d0d0d"
    tools:context="com.blog.sajal.coolcalculatorofudmy.MainActivity">

    <LinearLayout
        android:id="@+id/DLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtInput"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_margin="10dp"
            android:gravity="right"
            android:singleLine="false"
            android:text="3,74"
            android:textColor="#cccccc"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="right"
            android:singleLine="true"
            android:text="247526"
            android:textColor="#e3e3e3"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/AllBLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/DLinearLayout"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/B1LinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/DLinearLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#1b1b1b"
            android:orientation="horizontal"
            android:weightSum="4">


            <ImageButton
                android:id="@+id/btn_Clear"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:src="@drawable/ic_close" />

            <Button
                android:id="@+id/btn_plus_minus"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:text="±"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_divit"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:text="÷"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_mult"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:text="×"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/B2LinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/B1LinerLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#1b1b1b"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/btn_seven"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#232323"
                android:fallbackLineSpacing="true"
                android:text="7"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#232323"
                android:fallbackLineSpacing="true"
                android:text="8"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="#232323"
                android:text="9"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_sub"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:text="-"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/B3LinerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="#1b1b1b"
            android:orientation="horizontal"
            android:weightSum="4">


            <Button
                android:id="@+id/btn_four"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#232323"
                android:fallbackLineSpacing="true"
                android:text="4"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#232323"
                android:fallbackLineSpacing="true"
                android:text="5"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:background="#232323"
                android:text="6"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_add"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="#1a1a1a"
                android:text="+"
                android:textColor="#a7a7a7"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:weightSum="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_one"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#232323"
                        android:text="1"
                        android:textColor="#a7a7a7"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/btn_two"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="#232323"
                        android:text="2"
                        android:textColor="#a7a7a7"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/btn_three"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="#232323"
                        android:text="3"
                        android:textColor="#a7a7a7"
                        android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/btn_zero"
                        android:layout_width="183dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="#232323"
                        android:text="0"
                        android:textColor="#a7a7a7"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/btn_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="0dp"
                        android:layout_weight="1"
                        android:background="#232323"
                        android:text="."
                        android:textColor="#a7a7a7"
                        android:textSize="30dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_equal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ffc208"
                    android:text="="
                    android:textColor="#572800"
                    android:textSize="30dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
